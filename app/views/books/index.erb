<h1> All books </h1>
<br><br>

<% sorted_books = @books.sort_by {|book| -book.likes.count} %>

<% sorted_books.each do |book| %> 

    <a href="/books/<%= book.id %>"><img src="<%= book.image_url %>"></a> <br>
    <h3> <%= book.title %> </h3> <br>
    <h4> <%= book.author %> </h4> <br>
    <p> Likes: <%= book.likes.count %> <br>

    <br>

<% end %>    